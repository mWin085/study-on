{% extends 'base.html.twig' %}

{% block title %}Профиль{% endblock %}

{% block body %}

    <h1>Профиль</h1>

    <div class="row mb-5">
        <div class="col">
            <h3>Email</h3>
            <p>
                {{ username }}
            </p>

        </div>
        <div class="col">
            <h3>Роль</h3>
            {% if 'ROLE_SUPER_ADMIN' in roles %}
                Администратор
            {% elseif 'ROLE_USER' in roles %}
                Пользователь
            {% endif %}
        </div>

        <div class="col">
            <h3>Баланс</h3>
            <p>
                {{ balance }}
            </p>

        </div>
    </div>

{% endblock %}
