{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
    <h1>{{ course.title }}</h1>

    <p>{{ course.description }}</p>

    <h2>Уроки</h2>

    {%for key, lesson in lessons %}

        <div>{{ key+1 }}. <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.title }}</a></div>
    {% endfor %}

    <hr>
    <a href="{{ path('app_course_index') }}">К списку курсов</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>

    <a href="{{ path('app_lesson_new', {'course_id': course.id}) }}">Добавить урок</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
